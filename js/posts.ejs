<!DOCTYPE html>
<html>
    <head>
        <title>Your Mind</title>
        <link rel="stylesheet" href="css/index.css" type="text/css">
    </head>
<body>
    
    <div class="mainNavBar">
        <a href="#home">Home</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <h1>Hello World</h1>

    <div class="newPostContainer">
        <div class="newPostButton" id="newPostButton" onclick="toggleNewPostAnimations()">
            <p id="newPostButtonText">Click here to create a new post</p>
        </div>
        <div class="hiddenFormContainer hidden" id="hiddenFormContainer">
            <form action="/submit" method="post">
                <label>
                    <input type="text" id="title" name="title" placeholder="Post title" required>
                </label>
                <label>
                    <textarea id="text" name="text" rows="5" placeholder="Post text" required></textarea>
                </label>
                <label>
                    <input type="checkbox" name="tag" value="sfw"> sfw
                </label>
                <label>
                    <input type="checkbox" name="tag" value="nsfw"> nsfw
                </label>
                <label>
                    <input type="checkbox" name="tag" value="rant"> rant
                </label>
                <label for="files">Select media files:</label>
                <input type="file" id="files" name="files" multiple>
                <button type="submit">Submit</button>
                </form>
        </div>
    </div>

    <form action="/signup" method="POST">
        <input type="text" id="username" name="username" placeholder="Username">
        <input type="password" id="password" name="password" placeholder="Password">
        <input type="email" id="email" name="email" placeholder="Email">
        <button type="submit" id="submitBtn">Sign Up</button>
    </form>
    <form action="/mail" method="POST">
        <input type="text" id="nameMail" name="nameMail" placeholder="Full name" required>
        <input type="emailMail" id="emailMail" name="emailMail" placeholder="Email" required>
        <textarea id="textMail" name="textMail" rows="5" placeholder="Email text" required></textarea>
        <button type="submit">Send</button>
    </form>
    <form action="/create_post" method="post">
        <label for="title">Title:</label>
        <input type="text" name="titlePost" id="titlePost"><br>
      
        <label for="content">Content:</label>
        <textarea name="contentPost" id="contentPost"></textarea><br>
      
        <input type="submit" value="Create Post">
      </form>
      <form action="/login" method="post">
        <input type="email" id="emailLogin" name="emailLogin" placeholder="Email">
        <input type="password" id="passwordLogin" name="passwordLogin" placeholder="Password">
        <input type="submit" value="Login">
      </form>
      <form action="/logout" method="POST">
        <button type="submit">Logout</button>
      </form>
    <button onclick="getLocation()">Get Location</button>
    <h1>Results</h1>
    <% posts.forEach((post) => { %>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
      <% }); %>

  

  <script src="js/index.js"></script>
  <script src="js/sql.js"></script>
  <script src="js/other.js"></script>
</body>
</html>