<!DOCTYPE html>
<html>
    <head>
        <title>Your Mind</title>
        <link rel="stylesheet" href="../css/index.css" type="text/css">
    </head>
<body>
    
    <div class="mainNavBar">
        <a href="#home">Home</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <h1>Hello World</h1>
    <input type="text" id="searchTag" placeholder="Search...">
    <form action="/users/<%= userID %>" method="POST">
        <div class="tagScrollList" id="tagBoxes">
            <% tags.forEach((tag) => { %>
                <label><input type="checkbox" name="filters" value="<%= tag.title %>"><%= tag.title %></label>
              <% }); %>
        </div>
        <button type="submit">Submit</button>
      </form>

    <h1>Results</h1>
    <% posts.forEach((post) => { %>
        <h2><%= post.title %></h2>
        <p><a href="/posts/<%= post.id %>"><%= post.content %></a></p>
      <% }); %>

  <script src="../js/index.js"></script>
  <script src="../js/sql.js"></script>
  <script src="../js/other.js"></script>
</body>
</html>